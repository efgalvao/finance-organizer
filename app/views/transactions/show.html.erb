<p class=" title">
  <strong>Transaction: &nbsp</strong>
  <%= @transaction.title %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Title </th>
      <th> Kind </th>
      <th> Date </th>
      <th> Category </th>
      <th> Value </th>
      <th> Actions </th>
    </tr>
    </thead>
    <tbody>
        <tr>
          <td> <%= @transaction.title %></td>
          <td> <%= @transaction.kind %></td>
          <td> <%= @transaction.date %></td>
          <td> <%= @transaction.category_id %></td>
          <td> $ <%= @transaction.value %></td>
          <td> <%= link_to "Edit", edit_account_transaction_path(id: @transaction.id, account_id: @transaction.account.id), :class => "btn btn-primary" %>
          <%= link_to 'Remove', transaction_path(id: @transaction.id, account_id: @transaction.account.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
          </td>
        </tr>
    </tbody>
</table>

<%= link_to "New transaction", new_transaction_path, :class => "btn btn-success" %><br />
<%= link_to "Back", transactions_path, :class => "btn btn-info" %><br />
