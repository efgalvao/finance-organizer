<span class=" title">
  <%= truncate(@transaction.title, length:25) %>
</span>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Title </th>
      <th> Kind </th>
      <th> Date </th>
      <th> Category </th>
      <th> Value </th>
      <th> Account </th>
      <th> Actions </th>
    </tr>
    </thead>
    <tbody>
        <tr>
          <td> <%= @transaction.title %></td>
          <td> <%= @transaction.kind %></td>
          <td> <%= @transaction.date %></td>
          <td> <%= @transaction.category %></td>
          <td> $ <%= @transaction.value %></td>
          <td> <%= link_to @transaction.account_name %>
          <td> <%= link_to "Edit", edit_account_transaction_path(id: @transaction.id, account_id: @transaction.account.id), :class => "btn btn-primary" %>
          <%= link_to 'Remove', transaction_path(id: @transaction.id, account_id: @transaction.account.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
          </td>
        </tr>
    </tbody>
</table>

<%= link_to "Back", transactions_path, :class => "btn btn-info" %>
<%= link_to 'Create new transaction', new_transaction_path(account_id: @transaction.account.id), :class => "btn btn-success ml-3" %>
