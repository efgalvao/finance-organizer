<div class="title">
  Transactions
</div>

<br />

<% if !@transactions.blank? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th> Name </th>
      <th> Value </th>
      <th> Date </th>
      <th> Account </th>
      <th> Actions </th>
    </tr>
    </thead>
    <tbody>
      <% for transaction in @transactions %>
        <tr>
          <td> <%= link_to transaction.title, transaction_path(id: transaction.id) %></td>
          <td> $ <%= transaction.value %></td>
          <td> <%= transaction.date %></td>
          <td> <%= link_to transaction.account.name, account_path(id: transaction.account.id) %></td>
        </tr>
      <% end %>
    <% else %>
    <h1> No transactions available </h1>
    <% end %>
    </tbody>
</table>
