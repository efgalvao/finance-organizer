<div class="title">
  Dividends
</div>

<% @stocks.each do |stock| %>

    <div class="summary-subtitle">
      <%= link_to "#{stock.name} - #{stock.account.name}", stock_path(stock) %>
    </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Value</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% stock.dividends.order('date desc').limit(10).each do |dividend| %>
        <tr>
          <td><%= dividend.date.strftime('%B %d, %Y') %></td>
          <td><%= dividend.value %></td>
          <td><%= link_to 'Edit', edit_dividend_path(dividend), :class => "btn btn-warning" %>
          <%= link_to 'Delete', stock_dividend_path(stock_id: dividend.stock.id, id: dividend.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end%>
<%= link_to 'New Dividend', new_dividend_path, :class => "btn btn-success" %>
