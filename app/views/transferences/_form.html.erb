<%= form_for @transference do |form| %>
  <% if @transference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transference.errors.count, "error") %> prohibited this transference from being saved:</h2>

      <ul>
        <% @transference.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>il
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :amount, class: "input-group-text" %>
    <%= form.text_field :amount, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date , class: "input-group-text" %>
    <%= form.date_field :date, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sender, class: "input-group-text" %>
    <%= form.collection_select :sender_id, policy_scope(Account).all.order(:name),:id,:name, { include_blank: true }, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :receiver, class: "input-group-text" %>
    <%= form.collection_select :receiver_id, policy_scope(Account).all.order(:name),:id,:name, { include_blank: true }, :class => "form-control" %>
  </div>

  <br >
  <div class="actions">
    <%= form.submit :Submit, :class => "btn btn-success" %>
  </div>
  <br />
<% end %>
