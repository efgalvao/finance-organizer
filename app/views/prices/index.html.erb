<div class="title">
  Prices
</div>

<% @stocks.each do |stock| %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Stock</th>
        <th>Date</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% stock.prices.order('date desc').limit(10).each do |price| %>
        <tr>
          <td><%= price.stock.name %></td>
          <td><%= price.date.strftime('%B %d, %Y') %></td>
          <td><%= price.price %></td>
          <td><%= link_to 'Edit', edit_stock_price_path(id: price.id, stock_id: price.stock.id), :class => "btn btn-warning" %>
          <%= link_to 'Delete', stock_price_path(id: price.id, id: price.id, stock_id: price.stock.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br />
<%= link_to 'Register new share price', new_price_path, :class => "btn btn-success" %>
