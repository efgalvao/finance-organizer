<div class="title">
  Negotiations
</div>

<% @negotiations.each do |negotiation| %>

  <div class="summary-subtitle">
    <%= link_to "#{negotiation.treasury.name} (#{negotiation.treasury.account_name})",
      investments_treasury_path(id: negotiation.treasury_id) %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Value</th>
        <th>Kind</th>
        <th>Shares</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= negotiation.date&.strftime('%B %d, %Y') %></td>
          <td><%= negotiation.value %></td>
          <td><%= negotiation.kind %></td>
          <td><%= negotiation.shares %></td>

          </tr>
    </tbody>
  </table>

<br>
<% end%>
