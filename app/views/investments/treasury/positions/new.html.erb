<div class="title">
  New position
</div>

<div class="form">
<%= form_with(url: treasury_positions_path, scope: :position, local:true) do |form| %>
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
        <% @position.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label :date, class: "input-group-text" %>
      <%= form.date_field :date, class: "form-control", value: Time.now.strftime('%Y-%m-%d') %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "input-group-text" %>
      <%= form.text_field :amount, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-success" %>
    </div>
<% end %>

  <%= link_to 'Back', :back, :class => "btn btn-primary" %>
</div>
