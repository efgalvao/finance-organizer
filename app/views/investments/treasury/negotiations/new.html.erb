<% content_for :title, t('.title') %>

<div class="title">
  <%= @treasury.name %> -
  <%= t('.title') %>
</div>

<div class="form">
<%= form_with(url: treasury_negotiations_path, scope: :negotiation, local:true) do |form| %>
  <% if @negotiation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@negotiation.errors.count, "error") %> prohibited this negotiation from being saved:</h2>

      <ul>
        <% @negotiation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label t('.date'), class: "input-group-text" %>
      <%= form.text_field :date, class: "datepicker" %>
    </div>

    <div class="form-group">
      <%= form.label t('.invested'), class: "input-group-text" %>
      <%= form.number_field :invested, as: :numeric, step: :any,  class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label t('.kind'), class: "input-group-text" %>
      <%= form.text_field :kind, class: "validate" %>
    </div>

    <div class="form-group">
      <%= form.label t('.shares'), class: "input-group-text" %>
      <%= form.number_field :shares, as: :numeric, step: :any, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit t('.save'),class: "btn primary-btn" %>
      <%= link_to t('.cancel'), :back, :class => "btn btn-info" %>
    </div>
  </form>
<% end %>

</div>
