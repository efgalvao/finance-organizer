<div class="title">
  <%= @treasury.name %>
</div>

<div class="form">
<%= form_with(url: treasury_path(@treasury), scope: :treasury, method: :patch, local: true) do |form| %>
  <% if @treasury.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@treasury.errors.count, "error") %> prohibited this treasury from being saved:</h2>

      <ul>
        <% @treasury.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label t('.name'), class: "input-group-text" %>
      <%= form.text_field :name, class: "validate" %>
    </div>

    <div class="form-group">
      <%= form.label t('.account'), class: "input-group-text" %>
      <%= form.collection_select(:account_id, policy_scope(Account::Account), :id, :name, {}, {class: "browser-default form-select"}) %>
    </div>

    <div class="form-group">
      <%= form.submit t('.save'), class: "btn primary-btn" %>
      <%= link_to t('.cancel'), :back, class: "btn btn-info" %>
    </div>
  </form>
<% end %>
</div>
