<div class="title">
    <%= @treasury.name %>
</div>

<div class="stock-summary">
  <div class="summary-item">
    Current amount of shares:<br />
    <div class="item-value">
      <%= @treasury.shares %>
    </div>
  </div>

  <div class="summary-item green">
    Total amount invested:<br />
    <div class="item-value">
      <%= number_to_currency(@treasury.invested_value, unit: 'R$', separator: ',', delimiter: '') %>
    </div>
  </div>

  <div class="summary-item">
    Current value:<br />
    <div class="item-value">
      <%= number_to_currency(@treasury.current_value, unit: 'R$', separator: ',', delimiter: '') %>
    </div>
  </div>
</div>

<div>
  <%= link_to 'Back', :back , :class => "btn btn-primary ml-3" %>
  <%= link_to 'Create Negotiation', new_treasury_negotiation_path(@treasury), class: 'btn btn-success' %>
  <%= link_to 'Register new Position', new_treasury_position_path(@treasury), class: 'btn btn-success' %>
</div>

<div class="summary-item">
  <% if @treasury.negotiations %>
    <p class="summary-subtitle">Negotiations:</p>
    <table class="table table-hover">
      <thead>
        <tr>
          <th> Negotiation Date </th>
          <th> Negotiation Value </th>
          <th> Kind </th>
          <th> Shares </th>
        </tr>
      </thead>
      <tbody>
        <% for negotiation in @treasury.negotiations %>
        <tr>
          <td> <%= negotiation.date.strftime('%B %d, %Y') %> </td>
          <td> <%= negotiation.invested %> </td>
          <td> <%= negotiation.kind %> </td>
          <td> <%= negotiation.shares %> </td>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <h2> No negotiations for this treasury <h2>
  <% end %>

    <% if @treasury.positions %>
    <p class="summary-subtitle">Positions:</p>
    <table class="table table-hover">
      <thead>
        <tr>
          <th> Date </th>
          <th> Value </th>
        </tr>
      </thead>
      <tbody>
        <% for position in @treasury.positions %>
        <tr>
          <td> <%= position.date.strftime('%B %d, %Y') %> </td>
          <td> <%= position.amount %> </td>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <h2> No positions for this treasury <h2>
  <% end %>
