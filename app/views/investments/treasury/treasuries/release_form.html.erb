<% content_for :title, t('.title') %>

<div class="title">
  <%= @treasury.name %>
  <%= t('.title') %>
</div>

<div class="form">

<%= form_with(url: release_treasury_path, scope: :treasury, local: true) do |form| %>
  <% if @treasury.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@treasury.errors.count, "error") %> prohibited this treasury from being saved:</h2>

      <ul>
        <% @treasury.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label t('.released_at'), class: "input-group-text" %>
      <%= form.date_field :released_at, class: "form-control", value: Time.now.strftime('%Y-%m-%d') %>
    </div>

    <div class="form-group">
      <%= form.label t('.released_value'), class: "input-group-text" %>
      <%= form.number_field :released_value, as: :numeric, step: :any, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit t('.save'), class: "btn btn-success" %>
    </div>
  </form>
<% end %>

<%= link_to t('.cancel'), :back, class: "btn btn-primary" %>
</div>
