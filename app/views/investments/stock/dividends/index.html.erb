<% content_for :title, t('.title') %>

<div class="title">
  <%= t('.title') %>
</div>

<% @stocks.each do |stock| %>

  <div class="summary-subtitle">
    <%= link_to "#{stock.ticker} (#{stock.account_name})", stock_path(stock) %>
  </div>

  <table class="striped responsive-table">
    <thead>
      <tr>
        <th><%= t('.date') %></th>
        <th><%= t('.value') %></th>
      </tr>
    </thead>

    <tbody>
      <% stock.dividends.order('date desc').limit(5).each do |dividend| %>
        <tr>
          <td><%= format_date(dividend.date) %></td>
          <td><%= dividend.value %></td>
      <% end %>
    </tbody>
  </table>

<br>
<% end%>

<%= link_to t('.new_dividend'), new_stock_dividend_path, class: 'btn primary-btn ml-3'%>
