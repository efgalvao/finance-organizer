<div class="title">
  Dividends
</div>

<% @stocks.each do |stock| %>

  <div class="summary-subtitle">
    <%= link_to "#{stock.ticker} (#{stock.account_name})", stock_path(stock) %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Value</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% stock.dividends.order('date desc').limit(5).each do |dividend| %>
        <tr>
          <td><%= dividend.date&.strftime('%B %d, %Y') %></td>
          <td><%= dividend.value %></td>
      <% end %>
    </tbody>
  </table>

<br>
<% end%>

<%= link_to 'Add dividend', new_stock_dividend_path, class: 'btn btn-success ml-3'%>
