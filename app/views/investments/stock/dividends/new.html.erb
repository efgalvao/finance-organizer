<% content_for :title, t('.title') %>

<div class="title">
  <%= @stock.ticker %> -
  <%= t('.title') %>
</div>

<div class="form">
  <%= form_with(url: stock_dividends_path, scope: :dividend, local:true) do |form| %>
  <% if @dividend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dividend.errors.count, "error") %> prohibited this dividend from being saved:</h2>

      <ul>
        <% @dividend.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label t('.date'), class: "input-group-text" %>
      <%= form.text_field :date, class: "datepicker" %>
    </div>

    <div class="form-group">
      <%= form.label t('.value'), class: "input-group-text" %>
      <%= form.number_field :value, as: :numeric, step: :any, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit t('.save'), class: "btn primary-btn" %>
  <%= link_to t('.cancel'), :back, :class => "btn btn-info" %>
    </div>
<% end %>
</div>
