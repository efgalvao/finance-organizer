<% content_for :title, t('.title') %>

<div class="title">
  <%= @account.name %>
  <%= t('.title') %>
</div>

<div class="form">
<%= form_with(url: stocks_path, scope: :stock, local: true) do |form| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
        <% @stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label t('.ticker'), class: "input-group-text" %>
      <%= form.text_field :ticker, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label t('.account'), class: "input-group-text" %>
      <%= form.collection_select(:account_id, policy_scope(Account::Account).broker_accounts, :id, :name, { prompt: t('.choose_account'), selected: params[:account_id] }, {class: "custom-select"}) %>
    </div>

    <div class="form-group">
      <%= form.submit t('.save'), class: "btn btn-success" %>
    </div>
  </form>
<% end %>

<%= link_to t('.cancel'), :back , class: "btn btn-primary" %>
</div>
