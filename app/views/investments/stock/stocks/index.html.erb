<div class="title">
  Stocks
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Account</th>
      <th>Total invested</th>
      <th>Current balance</th>
      <th>Shares</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td> <%= link_to stock.ticker, stock_path(stock) %> </td>
        <td> <%= link_to stock.account_name, account_path(stock.account_id) %> </td>
        <td> $ <%= stock.invested_value_cents / 100.0 %> </td>
        <td> $ <%= stock.current_value_cents / 100.0 %> </td>
        <td> <%= stock.shares_total %> </td>
        <td> <%= link_to "Details", stock_path(stock), class:"btn btn-info" %>
             <%= link_to "Edit", edit_stock_path(stock), class:"btn btn-warning" %>
             <%= link_to "Delete", stock_path(stock), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create new stock', new_stock_path, class:"btn btn-success ml-3" %>
