<% content_for :title, t('.title') %>

<div class="title">
  <%= @stock.ticker %> -
  <%= t('.title') %>
</div>

<div class="form">
  <%= form_with(url: stock_shares_path, scope: :share, local:true) do |form| %>
    <form>
      <div class="form-group">
        <%= form.label t('.date'), class: "input-group-text" %>
        <%= form.text_field :date, class: "datepicker" %>
      </div>

      <div class="form-group">
        <%= form.label t('.total_invested'), class: "input-group-text"%>
        <%= form.number_field :invested, as: :numeric, step: :any, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= form.label t('.share_amount'), class: "input-group-text" %>
        <%= form.number_field :quantity, as: :numeric, step: :any, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit t('.save'), class: "btn primary-btn" %>
        <%= link_to t('.cancel'), :back, :class => "btn btn-info" %>
      </div>
    </form>
  <% end %>

</div>
