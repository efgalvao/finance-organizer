<div class="title">
  <%= t('.categories') %>
  <%= link_to t('.new_category'), new_category_path, :class => "btn primary-btn right" %>
</div>

<% if @categories.any? %>
<table class="striped responsive-table">
  <thead>
    <tr>
      <th> <%= t('.name') %> </th>
      <th> <%= t('.actions') %> </th>
    </tr>
    </thead>
    <tbody>
      <% for category in @categories %>
        <tr>
          <td> <%= link_to category.name, category_path(category) %></td>
          <td> <%= link_to t('.edit'), edit_category_path(id: category.id), :class => "btn primary-btn"  %>
          <%= link_to t('.remove'), category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn danger-btn" %>
          </td>
        </tr>
      <% end %>
    <% else %>
    <h1> <%= t('.no_category') %> </h1>
    <% end %>
    </tbody>
</table>
