<div class="title">
  <%= t('.new_balance') %>
</div>

<div class="form">
<%= form_with(url: account_balances_path, scope: :balance, local:true) do |form| %>
  <% if @balance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@balance.errors.count, "error") %> prohibited this balance from being saved:</h2>

      <ul>
        <% @balance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label t('.balance'), class: "input-group-text" %>
      <%= form.text_field :balance, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label t('.date'), class: "input-group-text" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit t('.save'), class: "btn btn-success" %>
    </div>
  </form>
<% end %>

<%= link_to t('.cancel'), :back, class: "btn btn-primary" %>

</div>
