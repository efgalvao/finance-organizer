<% content_for :title, t('.title') %>

<div class="title">
  <%= t('.title') %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.balance') %></th>
      <th><%= t('.last_balance_date') %></th>
      <th><%= t('.actions') %> </th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.name, account_path(account), class:"account" %></td>
        <td >$ <%= account.balance %></td>
        <td ><%= account.updated_at.strftime('%B %d, %Y') %></td>
        <td>
          <%= link_to t('.edit_account'), edit_account_path(account), class:"btn btn-primary" %>
          <%= link_to t('.delete_account'), account_path(account), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %> </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_account'), new_account_path, :class => "btn btn-success ml-3" %>
