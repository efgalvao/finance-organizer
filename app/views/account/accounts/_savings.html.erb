<div class="summary">
  <div class="summary-subtitle">
    Summary for <%= @account.name %>:
  </div>

  <div class="summary-item">
    Current balance:<br />
    <div class="item-value">
      <%= number_to_currency(@account.balance, unit: 'R$', separator: ',', delimiter: '') %>
    </div>
  </div>

  <div class="summary-item">
    <%= link_to 'Transactions', account_transactions_path(@account), class:'btn btn-success' %>
    <%= link_to 'Create new transaction', new_account_transaction_path(@account), :class => "btn btn-success ml-3" %>
    <%= link_to 'Create new transference', new_transference_path, :class => "btn btn-success ml-3" %>
    <% if !@account.savings? %>
    <%= link_to 'Create new stock', new_stock_path(account_id: @account.id), :class => "btn btn-success ml-3" %>
    <%= link_to 'Create new treasury', new_treasury_path(account_id: @account.id), :class => "btn btn-success ml-3" %>
    <% end %>
  </div>

  <%= render 'show_table' %>

  <div class="chart-title">
    Monthly balance(last 6 months):<br />
  </div>

  <div class="summary-chart">
    <%= line_chart @account.last_semester_balances, precision: 8 %>
  </div>
</div>
