<div class="account-item">
  <div class="account-subtitle">
    <%= t('.summary_for') %> <%= @account.name %>
  </div>

  <table class="striped responsive-table">
    <thead>
      <tr>
        <th><%= t('.current_balance') %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= number_to_currency(@account.balance, unit: 'R$', separator: ',', delimiter: '.') %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="account-item">
  <%= link_to t('.transactions'), account_transactions_path(@account), class:'btn primary-btn' %>
  <% if @account.kind == 'card' %>
    <%= link_to t('.new_transaction'), transactions_credit_path(account_id: @account.id), :class => "btn primary-btn" %>
  <% else %>
  <%= link_to t('.new_transaction'), new_account_transaction_path(@account), :class => "btn primary-btn" %>
  <% end %>
  <%= link_to t('.new_transference'), new_transference_path, :class => "btn primary-btn" %>
</div>

<div class="summary-item">
  <div class="summary-subtitle">
    <%= t('.monthly_total_balance') %><br />
  </div>

  <div class="chart">
  <%= line_chart [
    { name: t('.total_balance'), data: @account.semester_summary[:total_balance] }
  ], precision: 8 %>
  </div>
</div>

<div class="account-item">
  <div class="account-subtitle">
    <%= t('.monthly_balance') %><br />
  </div>

  <div class="chart">
    <%= line_chart [
      { name: t('.incomes'), data: @account.semester_summary[:income] },
      { name: t('.expenses'), data: @account.semester_summary[:expense] },
      { name: t('.invested'), data: @account.semester_summary[:invested] },
      { name: t('.balance'), data: @account.semester_summary[:final] }
    ], precision: 8 %>
  </div>
</div>

<div class="account-item">
  <% if @account.kind == 'savings' %>
    <%= render 'savings_table' %>
</div>

  <% end %>
</div>
