<div class="card-holder">
  <div class="card mb-3">
    <p>
      <strong>Aquisition date:</strong>
      <%= @share.aquisition_date.strftime('%B %d, %Y') %>
    </p>

    <p>
      <strong>Aquisition value:</strong>
      <%= @share.aquisition_value %>
    </p>

    <p>
      <strong>Stock:</strong>
      <%= @share.stock_name %>
    </p>

    <%= link_to 'Edit', edit_share_path(@share), class: "btn btn-warning" %>
    <%= link_to 'Back', shares_path,  class: "btn btn-primary" %>
  </div>
</div>
