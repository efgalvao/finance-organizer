<%= form_with(model: share, local: true) do |form| %>
  <% if share.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(share.errors.count, "error") %> prohibited this share from being saved:</h2>

      <ul>
        <% share.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label :aquisition_date, class: "input-group-text" %>
      <%= form.date_field :aquisition_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "Value of each share", class: "input-group-text"%>
      <%= form.text_field :aquisition_value, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= form.label :stock_id, class: "input-group-text" %>
      <%= form.collection_select(:stock_id, policy_scope(Stock).all, :id, :name_with_account, {prompt: 'Choose a stock'}, {class: "custom-select"}) %>
    </div>

    <div class="form-group">
      <%= form.label :quantity, class: "input-group-text" %>
      <%= number_field_tag 'quantity', 1, { min: 1, max: 100, class: "custom-select" }%>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </form>
<% end %>
