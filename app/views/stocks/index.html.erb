<div class="title">
  Stocks
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total invested</th>
      <th>Balance</th>
      <th>Shares</th>
      <th>Account</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td> <%= link_to stock.name, stock_summary_path(stock_id: stock.id) %> </td>
        <td> <%= stock.total_invested %> </td>
        <td> <%= stock.updated_balance %> </td>
        <td> <%= stock.shares.size %> </td>
        <td> <%= stock.account_name %> </td>
        <td> <%= link_to "Shares", stock_path(stock), class:"btn btn-info" %>
             <%= link_to "Edit", edit_stock_path(stock), class:"btn btn-warning" %>
             <%= link_to "Delete", stock, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create new stock', new_stock_path, class:"btn btn-success ml-3" %>
