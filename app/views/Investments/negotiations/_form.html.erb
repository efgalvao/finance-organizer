<%= form_with(model:negotiation, local:true) do |form| %>
  <% if negotiation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(negotiation.errors.count, "error") %> prohibited this negotiation from being saved:</h2>

      <ul>
        <% dividend.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label :date, class: "input-group-text" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :value, class: "input-group-text" %>
      <%= form.text_field :value, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :kind, class: "input-group-text" %>
      <%= form.text_field :kind, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :shares, class: "input-group-text" %>
      <%= form.text_field :shares, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :treasury_id, class: "input-group-text" %>
      <%= form.collection_select(:treasury_id, policy_scope(Treasury).all, :id, :name_with_account, {prompt: 'Choose a treasury'}, {class: "custom-select"}) %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </form>
<% end %>
